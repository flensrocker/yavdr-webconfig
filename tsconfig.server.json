{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist-server",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/server/types/*"
            ]
        }
    },
    "include": [
        "src/server/**/*"
    ]
}
